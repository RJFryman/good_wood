extends ../shared/template
block content
  .row
    .small-12.columns
      form(class='background', action='/woods', method='post', enctype='multipart/form=data')
        fieldset
          legend Add Wood
          .row
            .small-12.columns
              label(for='name') Name
              input(type='text', name='name')
          .row
            .small-12.columns
              label(for='desc') Description
              textarea(name='desc')
          .row
            .small-12.columns
              label(for='photo') Add a photo
              input(name='photo', type='file')
          .row
            .small-12.columns
              label(for='suggestedStain') suggested stain
              select(name='suggestedStain')
                option test 1
                option test 2
          .row
            .small-12
              label(for='isPremium') Premium?
              select(name='isPremium')
                option true
                option false
           .row
              button Add Wood
