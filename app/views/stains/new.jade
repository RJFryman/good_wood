extends ../shared/template
block content
  .row
    .small-12.columns
      form(class='background',action='/stains', method='post', enctype='multipart/form-data')
        fieldset
          legend Add stain
          .row
            .small-12.columns
              label(for='name') Name
              input(type='text', name='name')
          .row
            .small-12.columns
              label(for='desc') Description
              textarea(name='desc')
          .row
            .small-12.columns
              label(for='photo') Add a picture
              input(name='photo', type='file')
              button Add stain

